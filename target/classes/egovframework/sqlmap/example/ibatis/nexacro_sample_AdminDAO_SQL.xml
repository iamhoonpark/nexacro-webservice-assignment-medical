	<select id="nexacroAdmin.selectMDList" parameterClass="Map" resultClass="java.util.HashMap" remapResults="true">
		SELECT modelnm, manufacturer, dec_name, regDate, accyn
		FROM tb_medicalinfo
		<dynamic>
			<isNotNull property="searchWord">
			
				<isEqual prepend="WHERE" property="searchKey" >
					modelnm Like '%'||#searchWord#||'%'
				</isEqual>
				
				<isEqual prepend="WHERE" property="searchKey" >
					manufacturer Like '%'||#searchWord#||'%'
				</isEqual>
				
				<isEqual prepend="WHERE" property="searchKey" >
					dec_name Like '%'||#searchWord#||'%'
				</isEqual>
			
			</isNotNull>
		</dynamic>
	</select>
	
</sqlMap>
